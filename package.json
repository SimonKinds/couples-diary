{
  "name": "couples-diary",
  "version": "0.0.1",
  "repository": "https://github.com/SimonKinds/couples-diary",
  "author": "Simon Kindstr√∂m <simon.kindstrom@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --open",
    "start:server": "nodemon --watch src/server src/server/index.js",
    "flow": "flow check",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "jest",
    "test:watch": "jest -o --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint:fix && npm run test",
      "pre-push": "npm run format && npm run lint:fix && npm run test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/client/__mocks__/styleMock.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/config/enzyme-setup.js"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest-node": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.10",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.14.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.67.1",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "nodemon": "^1.17.2",
    "prettier-eslint": "^8.8.1",
    "style-loader": "^0.20.2",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  }
}
